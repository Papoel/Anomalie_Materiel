<section id="editUserForm" class="mt-3">
    {{ form_start(form) }}
    <fieldset class="mb-4">
        <legend>Informations personnelles</legend>
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.firstname) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastname) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.nni) }}
            </div>
        </div>
    </fieldset>

    <fieldset class="mb-4">
        <legend>Rôles et accès</legend>
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.roles) }}
            </div>
        </div>
    </fieldset>

    <fieldset class="mb-4">
        <legend>Informations système</legend>
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.created_at) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.updated_at) }}
            </div>
        </div>
    </fieldset>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('user_index') }}" class="btn btn-sm btn-outline-blue">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        <button type="submit"
                class="btn btn-sm btn-primary text-white">{{ button_label|default('Sauvegarder les modifications') }}</button>
    </div>
    {{ form_end(form) }}
</section>
