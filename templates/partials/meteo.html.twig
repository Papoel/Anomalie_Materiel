<div class="d-flex">
    <img src="https://openweathermap.org/img/w/{{ weather.icon }}.png" class="img-fluid me-2" alt="weather-icon">
    <div class="d-flex align-items-center">
        <strong class="fs-4 text-secondary">{{ weather.temperature|round(1, 'floor') }}</strong>
        <div class="d-flex flex-column ms-2" style="width: 150px;">
            <span class="text-body">{{ city.name }}, {{ weather.description }}</span>
            <small>{{ 'now'|format_datetime('medium', 'none') }}</small>
        </div>
    </div>
</div>
